<h1>Organization: <%= @organizations.name %></h1>
  <ul class="list-group">
    <li class="list-group-item list-group-item-dark">
      All Posts count: <%= @organizations.posts.all.count %>
    </li>
  </ul>
  <br/>
  <table class="table table-hover table-dark">
    <thread>
      <tr>
        <th scope="col">Author</th>
        <th scope="col">Post Status</th>
        <th scope="col">Active User</th>
        <th scope="col">Edit</th>
        <th scope="col">Post count</th>
      </tr>
    </thread>
    <%- @users.each do |user| %>
      <tbody>
      <tr data-item_id="<%= user.name %>">
        <th scope="col"><%= link_to user.name, organization_user_path(id: user.id) %></th>
        <th scope="col"><%= user.state %></th>
        <th scope="col"><%= user.name %></th>
        <th><%= button_to 'Edit', edit_organization_post_path(id: user.id), method: :get,
                          class: "btn btn-secondary", style: "margin-right: 15px" %></th>
        <th>
          <%= user.posts.count %>
        </th>
      </tr>
      </tbody>
    <% end %>
  </table>


  <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-toolbar mr-2" role="group" aria-label="First group">
      <%= button_to 'Create post', new_organization_post_path, method: :get,
                    class: "btn btn-secondary", style: "margin-right: 15px" %>
    </div>
  </div>

  </br>

  <fieldset class="form-group">
    <legend class="mt-4">Ð¡hoice of status post</legend>
    <div scope="col">
      <%= form_with(model: @posts, url: [@organizations,@posts]) do |form| %>
      <%= form.collection_check_boxes :status, @organizations.posts.select(:status).distinct.order(:status), :status, :status%>
    </div>
        <%= button_to 'Filter', organization_posts_path(id:@posts.id,organization:@organizations.id,
                                                        user:@users.ids,status: params[:status]), method: :get,
                      class: "btn btn-secondary", style: "margin-right: 15px" %>
  </fieldset>
<% end %>

<%= render partial: 'start_page/home' %>
